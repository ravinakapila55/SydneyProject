<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/text_red">


           <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/view_35"
            android:layout_height="@dimen/view_35"
            android:src="@drawable/back"
            android:padding="@dimen/margin_5"
            android:layout_marginBottom="@dimen/view_15"
            android:layout_marginLeft="@dimen/margin_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white_color"
            android:padding="@dimen/margin_5"
            android:layout_marginBottom="@dimen/view_15"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/view_1"
            app:layout_constraintLeft_toRightOf="@+id/ivBack"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <TextView
            android:id="@+id/tvheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white_color"
            android:padding="@dimen/margin_5"
            android:layout_marginBottom="@dimen/view_15"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/view_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/view_100dp"
        android:layout_height="@dimen/view_100dp"
        android:src="@drawable/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/view_40"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccHeader"/>


        <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="@dimen/view_30"
        android:layout_height="@dimen/view_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/view_100dp"
        app:layout_constraintTop_toBottomOf="@+id/ccHeader"
        android:layout_marginLeft="@dimen/view_80"
        android:src="@drawable/camera_orang"/>






        <EditText
        android:id="@+id/etUname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_16"
        android:layout_marginLeft="@dimen/view_25"
        android:layout_marginRight="@dimen/view_25"
        android:textStyle="normal"
        android:background="@drawable/gray_corner_box"
        android:padding="@dimen/view_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"
        android:layout_marginTop="@dimen/view_40"/>


        <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_16"
        android:layout_marginLeft="@dimen/view_25"
        android:layout_marginRight="@dimen/view_25"
        android:textStyle="normal"
        android:background="@drawable/gray_corner_box"
        android:padding="@dimen/view_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUname"
        android:layout_marginTop="@dimen/view_15"/>


        <EditText
        android:id="@+id/etMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_16"
        android:layout_marginLeft="@dimen/view_25"
        android:layout_marginRight="@dimen/view_25"
        android:textStyle="normal"
        android:background="@drawable/gray_corner_box"
        android:padding="@dimen/view_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_marginTop="@dimen/view_15"/>




        <TextView
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/white_color"
        android:textSize="@dimen/txt_16"
        android:layout_marginLeft="@dimen/view_25"
        android:layout_marginRight="@dimen/view_25"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/orange_background_corner"
        android:padding="@dimen/view_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMob"
        android:layout_marginTop="@dimen/view_40"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardElevation="@dimen/view_8"
        android:elevation="@dimen/view_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/view_5"
        android:background="#fff"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/rel_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="1"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ccHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/view_1"
                android:layout_marginBottom="@dimen/view_1">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="@dimen/view_25"
                    android:layout_height="@dimen/view_25"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_side"
                    android:tint="@color/gray_btn_bg_pressed_color"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/txt_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_home" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_saved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/view_1"
                android:layout_marginTop="@dimen/view_1"
                >



                <ImageView
                    android:id="@+id/img_saved"
                    android:layout_width="@dimen/view_25"
                    android:layout_height="@dimen/view_25"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/saved_bills_tab"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/txt_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_saved"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Saved Bills"/>




            </androidx.constraintlayout.widget.ConstraintLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/view_1"
                android:layout_marginBottom="@dimen/view_1"
                >

                <ImageView
                    android:id="@+id/img_history"
                    android:layout_width="@dimen/view_25"
                    android:layout_height="@dimen/view_25"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:rotation="360"
                    android:src="@drawable/history_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/txt_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_history"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="History"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="0dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:layout_height="match_parent"
            android:layout_weight="1">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/view_1"
                >

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/view_25"
                    android:layout_height="@dimen/view_25"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/text_red"
                    android:src="@drawable/profile_tab"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/txt_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Profile"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </RelativeLayout>



    </LinearLayout>


    </androidx.cardview.widget.CardView>













</androidx.constraintlayout.widget.ConstraintLayout>