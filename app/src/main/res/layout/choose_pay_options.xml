<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    >

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/view_50"
        android:layout_height="@dimen/view_50"
        android:src="@drawable/sign_in_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/view_65"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Pay Options"
        android:textColor="@color/white_color"
        android:textSize="@dimen/txt_20"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:layout_marginTop="@dimen/view_25"/>


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tvLabel"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="@dimen/view_40"
    android:layout_marginRight="@dimen/view_40"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccApple"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        android:layout_marginRight="@dimen/view_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_circle_background"
        android:layout_marginTop="@dimen/view_40"
        >



        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/apple_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlAlCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccGpay"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/view_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/white_circle_background">


        <ImageView
            android:id="@+id/ivGpay"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/google_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlgpCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccSamsng"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        android:layout_marginTop="@dimen/view_40"
        android:layout_marginLeft="@dimen/view_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/white_circle_background">


        <ImageView
            android:id="@+id/ivSamsung"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/samsung_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlsamCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccVenmo"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/view_40"
        app:layout_constraintTop_toBottomOf="@+id/ccApple"
        android:layout_marginRight="@dimen/view_20"
        android:background="@drawable/white_circle_background">


        <ImageView
            android:id="@+id/ivGooivVenmogle"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/venmo_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlVenCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccZella"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccGpay"
        android:layout_marginTop="@dimen/view_40"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/white_circle_background">


        <ImageView
            android:id="@+id/ivZella"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/zella_pay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlZellaCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccPaypal"
        android:layout_width="@dimen/view_70"
        android:layout_height="@dimen/view_70"
        android:layout_marginLeft="@dimen/view_40"
        app:layout_constraintTop_toBottomOf="@+id/ccSamsng"
        android:layout_marginTop="@dimen/view_40"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/white_circle_background">


        <ImageView
            android:id="@+id/ivPaypal"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:src="@drawable/paypal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:id="@+id/rlPayPalCheck"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:background="@drawable/selected_check"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/txt_18"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/view_50"
        android:background="@drawable/transparent"
        android:layout_marginRight="@dimen/view_40"
        android:layout_marginTop="@dimen/view_40"
        android:layout_marginLeft="@dimen/view_40"
        android:gravity="center"
        android:padding="@dimen/view_15"/>




</androidx.constraintlayout.widget.ConstraintLayout>