<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/text_red">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/view_35"
            android:layout_height="@dimen/view_35"
            android:src="@drawable/back"
            android:padding="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/tvheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Mobile No."
            android:textColor="@color/white_color"
            android:padding="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/view_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/view_100dp"
        android:layout_height="@dimen/view_200dp"
        android:src="@drawable/otp_logo"
        android:padding="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccHeader"
        />


    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent you a one time \n password on your phone number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:textSize="@dimen/txt_18"
        android:padding="@dimen/view_5"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel"
        android:layout_marginTop="@dimen/view_20">


        <EditText
            android:id="@+id/et1"
            android:layout_width="@dimen/view_40"
            android:layout_height="@dimen/view_40"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/view_5"
            android:background="@drawable/gray_corner_box"
            />


        <EditText
            android:id="@+id/et2"
            android:layout_width="@dimen/view_40"
            android:layout_height="@dimen/view_40"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="@dimen/view_15"
            app:layout_constraintLeft_toRightOf="@+id/et1"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gray_corner_box"
            />


        <EditText
            android:id="@+id/et3"
            android:layout_width="@dimen/view_40"
            android:layout_height="@dimen/view_40"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="@dimen/view_15"
            app:layout_constraintLeft_toRightOf="@+id/et2"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gray_corner_box"
            />


        <EditText
            android:id="@+id/et4"
            android:layout_width="@dimen/view_40"
            android:layout_height="@dimen/view_40"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="@dimen/view_15"
            app:layout_constraintLeft_toRightOf="@+id/et3"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gray_corner_box"
            />

        <EditText
            android:id="@+id/et5"
            android:layout_width="@dimen/view_40"
            android:layout_height="@dimen/view_40"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="@dimen/view_15"
            app:layout_constraintLeft_toRightOf="@+id/et4"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gray_corner_box"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ccOptions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ccNo"
    android:layout_marginLeft="@dimen/view_50"
    android:layout_marginRight="@dimen/view_50"
    android:layout_marginTop="@dimen/view_20">


     <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:20"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/txt_16"
            android:layout_marginTop="@dimen/view_20"
            android:padding="@dimen/view_5"/>



    <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP ?"
            android:textColor="@color/text_red"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/txt_16"
            android:layout_marginTop="@dimen/view_20"
            android:padding="@dimen/view_5"/>


    </androidx.constraintlayout.widget.ConstraintLayout>






        <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/txt_16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/view_50"
        android:background="@drawable/orange_background_corner"
        android:layout_marginRight="@dimen/view_15"
        android:layout_marginTop="@dimen/view_40"
        android:layout_marginLeft="@dimen/view_15"
        android:gravity="center"
        android:padding="@dimen/view_10"/>












</androidx.constraintlayout.widget.ConstraintLayout>