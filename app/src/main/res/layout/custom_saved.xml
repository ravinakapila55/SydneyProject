<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_5"
    android:background="@drawable/savedddd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/view_5">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/view_80"
                android:layout_height="@dimen/view_80"
                android:src="@drawable/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

                 <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/ivProfile"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Zabb Express"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                android:layout_marginRight="@dimen/view_1"
                android:layout_marginLeft="@dimen/view_15"/>

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="22 Sep,2020"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/dark_gray"
                android:textStyle="normal"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                android:layout_marginRight="@dimen/view_1"
                android:layout_marginLeft="@dimen/view_15"/>



            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/ivProfile"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:text="Total Amount"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/dark_gray"
                android:textStyle="normal"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                android:layout_marginRight="@dimen/view_1"
                android:layout_marginLeft="@dimen/view_15"/>


            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tvAmountLabel"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:text="$79.00"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/text_red"
                android:textStyle="normal"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                android:layout_marginRight="@dimen/view_1"
                android:layout_marginLeft="@dimen/view_5"/>


            <TextView
                android:id="@+id/tvShared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/ivProfile"
                app:layout_constraintTop_toBottomOf="@+id/tvAmountLabel"
                android:text="Shared with Amina Watson"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/dark_gray"
                android:textStyle="normal"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                android:layout_marginRight="@dimen/view_1"
                android:layout_marginLeft="@dimen/view_15"/>







        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/lightest_gray"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


