<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cc"
            android:layout_width="@dimen/view_100dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/view_1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/view_60"
                android:layout_height="@dimen/view_60"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/profile"/>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivProfile"
                android:text="David"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                />


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:text="Owed $15"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/light_gray"
                android:textStyle="normal"
                android:padding="@dimen/view_1"
                android:layout_marginTop="@dimen/view_5"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


