<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_5"
        app:cardCornerRadius="@dimen/view_5"
        app:cardElevation="@dimen/view_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/view_10">

    <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/cc"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:padding="@dimen/view_5">

                <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/view_200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Lorem ipsum is simply dummy text ?"
                android:textSize="@dimen/txt_12"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/text_red"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/view_5"/>

                <ImageView
                android:id="@+id/ivDrop"
                android:layout_width="@dimen/view_20"
                android:layout_height="@dimen/view_20"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/drop_arrow"
                android:tint="@color/text_red"
                android:layout_marginLeft="@dimen/view_5"/>

                <TextView
                 android:id="@+id/tvDesc"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/dummy_text"
                 android:textSize="@dimen/txt_12"
                 android:visibility="gone"
                 android:padding="@dimen/view_5"
                 app:layout_constraintTop_toBottomOf="@+id/tvName"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginTop="@dimen/view_10"
                 android:textColor="@color/gray_btn_bg_pressed_color"
                 android:textStyle="normal"
                 android:layout_marginLeft="@dimen/view_5"/>

                 <View
                 android:id="@+id/viewww"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="@color/gray_btn_bg_pressed_color"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:paddingBottom="@dimen/view_5"
                 android:visibility="gone"
                    android:layout_marginBottom="@dimen/view_5"
                    app:layout_constraintTop_toBottomOf="@+id/tvDesc"
                    android:layout_marginTop="@dimen/view_5"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


